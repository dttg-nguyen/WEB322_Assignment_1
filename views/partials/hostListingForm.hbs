  <div class="modal fade" id="uploadListing">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">

        <div class="modal-header text-center">
          <h4 class="modal-title text-center w-100">Tell us more about your place</h4>
          <button type="button" class="close" data-dismiss="modal" aria-label="close">&times;</button>
        </div>

        <div class="modal-body mx-1">
          <form class="uploadListing" id="uploadRoomForm" action="/" method="POST" novalidate>

            <div class="form-group col-md-12 mb-0">
              <label data-error="wrong" data-success="right" class="hostAddress">Address</label>
              <input type="text" id="hostAddress" class="form-control validate" placeholder="Address"
                autocomplete="address-level4" tabindex="1" required>
              <div class="invalid-feedback">Please enter your address</div>
            </div>

            <div class="form-group col-md-12 mb-0">
              <label class="form-label" for="listingType">Place's description</label>
              <select id="listingType" name="listingType" class="form-control" tabindex="2">
                <option selected>Entire Place</option>
                <option>Private Room</option>
                <option>Shared room</option>
              </select>
            </div>

            <div class="form-group col-md-12 mb-0">
              <label data-error="wrong" data-success="right" for="numGuest">Number of guests</label>
              <input type="number" id="numGuest" class="form-control validate" placeholder="Number of guests"
                tabindex="3" min="1" required>
              <div class="invalid-feedback">Please enter a number</div>
            </div>

            <div class="form-group col-md-12 mb-0">
              <label class="form-label" for="propertyType">Type of property</label>
              <select id="propertyType" tabindex="4" class="form-control">
                <option>Apartment</option>
                <option>Bed and breakfast</option>
                <option>Hotel</option>
                <option>House</option>
              </select>
            </div>

            <div class="form-group col-md-12 mb-0">
              <div class="form-row">
                <div class="form-group col-md-6">
                  <label for="inputBedrooms">Bedrooms</label>
                  <input type="number" class="form-control" id="inputBedrooms" tabindex="5" min="1" required>
                  <div class="invalid-feedback">Please enter a number</div>
                </div>
                <div class="form-group col-md-6">
                  <label for="inputBathrooms">Bathrooms</label>
                  <input type="number" class="form-control" id="inputBathrooms" tabindex="6" required>
                  <div class="invalid-feedback">Please enter a number</div>
                </div>
              </div>
            </div>

            <div class="form-group col-md-12 mb-0">
              <h5>Upload your listing's images</h5>
              {{!-- <p><small>You can choose more than 1 image.</small></p> add multiple to input--}}
              <hr class="hr-dark">
              <div class="custom-file">
                <input type="file" class="custom-file-input" id="listingImg" tabindex="7">
                <label class="custom-file-label" for="listingImg">Choose file</label>
                <div class="invalid-feedback">Please upload at least 1 image</div>
              </div>
              <hr class="hr-dark">
              <p><small>By selecting Agree and submit below, I agree to airM&Mâ€™s <a href="#">Terms of Service</a>,
                  <a href="#">Payments Terms of Service</a>, <a href="#">Privacy Policy</a>, and <a
                    href="#">Nondiscrimination Policy</a>.</small></p>
            </div>
            <button class="btn btn-primary" type="submit" tabindex="7">Agree and submit</button>
          </form>
        </div>
      </div>
    </div>
  </div>